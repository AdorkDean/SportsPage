<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_notification"
    android:layout_width="match_parent"
    android:background="@color/bg_layout"
    android:layout_height="match_parent">

    <include android:id="@+id/layout_notification_title"
        layout="@layout/layout_title" />

    <RelativeLayout
        android:id="@+id/rl_notification_notice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/other_item_height"
        android:layout_below="@id/layout_notification_title"
        android:background="#ffffff"
        android:paddingLeft="12dp"
        android:layout_marginTop="5dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:text="@string/rev_new_msg_notification"
            android:textSize="14sp" />

        <ch.ielse.view.SwitchView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            app:primaryColor="@color/switch_color"
            app:primaryColorDark="@color/switch_color"
            app:isOpened="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#DBDBDB" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_notification_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/other_item_height"
        android:layout_below="@id/rl_notification_notice"
        android:background="#ffffff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:text="@string/show_msg_detail"
            android:textSize="14sp" />

        <ch.ielse.view.SwitchView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:isOpened="true"
            app:primaryColor="@color/switch_color"
            app:primaryColorDark="@color/switch_color"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#DBDBDB" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_notification_voice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/other_item_height"
        android:layout_below="@id/rl_notification_detail"
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <ch.ielse.view.SwitchView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:primaryColor="@color/switch_color"
            app:isOpened="true"
            app:primaryColorDark="@color/switch_color"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#DBDBDB" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="@string/voice"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_notification_vibration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/other_item_height"
        android:layout_below="@id/rl_notification_voice"
        android:background="#ffffff"
        android:paddingLeft="12dp"
        android:paddingRight="12dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:text="@string/vibration"
            android:textSize="14sp" />

        <ch.ielse.view.SwitchView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:primaryColor="@color/switch_color"
            app:isOpened="true"
            app:primaryColorDark="@color/switch_color"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="#DBDBDB" />
    </RelativeLayout>



</com.zhy.autolayout.AutoRelativeLayout>
