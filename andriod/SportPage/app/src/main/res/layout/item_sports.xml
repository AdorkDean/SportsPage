<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:background="@drawable/sports_shadow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_marginTop="8dp"
            android:id="@+id/iv_sports"
            android:layout_width="match_parent"
            android:layout_height="175.5dp"
            app:riv_corner_radius_top_left="5dp"
            app:riv_corner_radius_top_right="5dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10.5dp"
            android:scaleType="fitXY"
            android:src="@drawable/sports_line" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:scaleType="fitXY"
            android:src="@drawable/sports_bottom" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp">

        <ImageView
            android:id="@+id/iv_card_gradully"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/sports_gradually"
            android:scaleType="centerCrop" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_sports_location"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location"
                android:layout_marginLeft="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/tv_sports_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="12-16 18:00"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tv_sports_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_sports_location"
                android:layout_toLeftOf="@id/tv_sports_time"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:layout_alignParentBottom="true"
                android:text="浅水湾什么地方"
                android:maxLines="1"
                android:textColor="@color/white" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout">

        <View
            android:id="@+id/v_sports_space"
            android:layout_width="match_parent"
            android:layout_height="194dp" />

        <ImageView
            android:id="@+id/iv_sports_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sports_name"
            android:layout_below="@id/v_sports_space"
            />
        <TextView
            android:id="@+id/tv_sports_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周末打球"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:layout_below="@id/v_sports_space"
            android:layout_toRightOf="@id/iv_sports_type"
        />

        <ImageView
            android:id="@+id/iv_sports_star"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:scaleType="fitStart"
            android:src="@drawable/star_4"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/tv_sports_name"
            android:layout_toRightOf="@id/iv_sports_type"
            />

        <TextView
            android:id="@+id/tv_sports_user_name"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="Tenma"
            android:layout_alignParentRight="true"
            android:layout_below="@id/v_sports_space"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_sports_num"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:text="2/10"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_sports_user_name"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:src="@drawable/member"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/tv_sports_num"
            android:layout_below="@id/tv_sports_user_name"
            />



    </RelativeLayout>

</RelativeLayout>