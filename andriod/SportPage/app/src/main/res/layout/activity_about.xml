<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFF4"
    tools:context="com.sportspage.activity.AboutActivity">

    <include android:id="@+id/layout_about_title"
        layout="@layout/layout_title" />

    <ImageView
        android:id="@+id/iv_about_logo"
        android:layout_below="@id/layout_about_title"
        android:layout_width="match_parent"
        android:src="@drawable/mine_sys_aboutus_logo"
        android:scaleType="fitCenter"
        android:layout_height="250dp" />

    <RelativeLayout
        android:id="@+id/rl_view_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_item_height"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_about_logo"
        android:background="@drawable/setting_item_selector"
        android:clickable="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="查看引导页"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_sex_more"
            android:layout_width="@dimen/sports_type_image_size"
            android:layout_height="@dimen/sports_type_image_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mine_more" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_about_version"
        android:layout_width="wrap_content"
        android:text="当前版本V1.0.1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="90px"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_about_company"
        android:layout_width="wrap_content"
        android:text="上海云页信息科技有限公司"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="50px"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

    </com.zhy.autolayout.AutoRelativeLayout>
