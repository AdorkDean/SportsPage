<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="260dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="10dp"
    android:elevation="10dp" >

    <LinearLayout
        android:id="@+id/ll_follow_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:clickable="true"
        android:background="@drawable/setting_item_selector"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_follow_img"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/item_focus_img_size"
                    android:scaleType="fitCenter"
                    android:layout_height="@dimen/item_focus_img_size"
                    android:src="@drawable/sports_focus_location"
                    />

                <TextView
                    android:id="@+id/tv_follow_location"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="宝山区新二路88号"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/item_focus_img_size"
                    android:layout_height="@dimen/item_focus_img_size"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sports_focus_time"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_follow_time"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="01-03 20:00"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/item_focus_img_size"
                    android:layout_height="@dimen/item_focus_img_size"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sports_focus_initiate"
                    />

                <TextView
                    android:id="@+id/tv_follow_initiate"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="AlphaGo"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/item_focus_img_size"
                    android:layout_height="@dimen/item_focus_img_size"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sports_focus_price"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tv_follow_price"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="1元/人"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/sports_focus_line"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_sports_detail_img"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:src="@drawable/sports_focus_members"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/tv_follow_num"
                android:layout_width="wrap_content"
                android:text="1/10"
                android:layout_height="wrap_content" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rv_follow_enrollor1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="20dp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rv_follow_enrollor2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="20dp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rv_follow_enrollor3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="20dp" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/rv_follow_enrollor4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_focus_enroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:text="还没有人参与其中,赶快来报名吧"
            android:textColor="@color/black" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/sports_focus_black"
            android:scaleType="centerCrop"
            android:layout_alignParentBottom="true"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_follow_title"
            android:layout_width="wrap_content"
            android:text="来打篮球吧"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_follow_star"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:scaleType="fitStart"
            android:src="@drawable/star_4"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>