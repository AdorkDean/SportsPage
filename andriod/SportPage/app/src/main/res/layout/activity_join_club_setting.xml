<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_layout" >

    <include layout="@layout/layout_title" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_join_club_allow_all"
        android:layout_width="match_parent"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:layout_marginTop="12px"
        android:background="@drawable/setting_item_selector"
        android:layout_height="100px">

        <TextView
            android:layout_width="match_parent"
            android:text="允许任何人加入俱乐部"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_join_claub_allow_all"
            android:layout_width="60px"
            android:background="@drawable/club_setting_selected"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_height="60px" />

    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="1px" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_jonin_club_need_auth"
        android:layout_width="match_parent"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:background="@drawable/setting_item_selector"
        android:layout_height="100px">

        <TextView
            android:layout_width="match_parent"
            android:text="需要身份验证"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_jonin_club_need_auth"
            android:layout_width="60px"
            android:background="@drawable/club_setting_selected"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="60px" />

    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>