<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:button="@drawable/jy_checkbox_selector"
            android:focusable="false"
             />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.sportspage.view.AutoCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:elevation="10dp"
        android:padding="10dp"
        app:cardCornerRadius="10dp">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_sport_record_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_corners_normal"
            android:clickable="true"
            android:orientation="vertical"
            android:padding="10dp">

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/tv_record_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="这是运动名称" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/gray" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/iv_record_sports"
                    android:layout_width="0dp"
                    android:layout_height="85dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.9"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius_top_left="5dp"
                    app:riv_corner_radius_top_right="5dp" />

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1.4"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_sportpage_height">

                        <ImageView
                            android:id="@+id/iv_sportpage_star"
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:scaleType="centerInside"
                            android:src="@drawable/star_3_5" />

                        <TextView
                            android:id="@+id/tv_sportpage_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="(已激活2次)"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_sportpage_height">

                        <TextView
                            android:id="@+id/tv_sportpage_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="足球"
                            android:textColor="@color/black" />

                    </com.zhy.autolayout.AutoLinearLayout>

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_sportpage_height">

                        <TextView
                            android:id="@+id/tv_sportpage_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="这是一个长长的地址"
                            android:textColor="@color/black" />

                    </com.zhy.autolayout.AutoLinearLayout>

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_sportpage_status"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/mine_sportspage_active" />
        </com.zhy.autolayout.AutoRelativeLayout>

    </com.sportspage.view.AutoCardView>

</com.zhy.autolayout.AutoLinearLayout>