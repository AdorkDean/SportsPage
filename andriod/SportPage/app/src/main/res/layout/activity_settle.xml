<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_settle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_layout"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <TextView
        android:id="@+id/tv_settle_sportName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_item_height"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="黑马"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_item_height"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:layout_width="@dimen/create_item_img_size"
            android:layout_height="@dimen/create_item_img_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sports_order_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="@string/start_date"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_settle_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_height"
            android:gravity="right|center_vertical"
            android:textColor="@color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_item_height"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:layout_width="@dimen/create_item_img_size"
            android:layout_height="@dimen/create_item_img_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sports_order_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="@string/start_time"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_settle_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_height"
            android:gravity="right|center_vertical"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_item_height"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:layout_width="@dimen/create_item_img_size"
            android:layout_height="@dimen/create_item_img_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sports_order_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="@string/address"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_settle_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_height"
            android:gravity="right|center_vertical"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_item_height"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:layout_width="@dimen/create_item_img_size"
            android:layout_height="@dimen/create_item_img_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sports_create_step2_charge" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="@string/money"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_settle_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_height"
            android:gravity="right|center_vertical"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_item_height"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:layout_width="@dimen/create_item_img_size"
            android:layout_height="@dimen/create_item_img_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sports_order_initiate" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="@string/enroll_num"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_settle_num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_height"
            android:gravity="right|center_vertical"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_item_height"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:layout_width="@dimen/create_item_img_size"
            android:layout_height="@dimen/create_item_img_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sports_order_chargetype" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="@string/pay_way"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_settle_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_height"
            android:gravity="right|center_vertical"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_item_height"
        android:background="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:layout_width="@dimen/create_item_img_size"
            android:layout_height="@dimen/create_item_img_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/sports_order_inall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="@string/settle_money"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_settle_inall"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_height"
            android:gravity="right|center_vertical"
            android:textColor="@color/black" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rl_settle_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/create_item_height"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/tv_settle_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/settle_money"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_settle_should_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_settle_all"
                android:text="￥50.00"
                android:textColor="@color/red" />

            <Button
                android:id="@+id/btn_settle_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_bg_blue"
                android:padding="10dp"
                android:text="@string/comfirm_settle"
                android:textColor="@color/white" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_above="@id/rl_settle_bottom"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray" />

    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
