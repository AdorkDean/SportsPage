<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="530px"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_club_record_img"
        android:layout_width="530px"
        android:layout_height="300px"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_test" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:gravity="center_vertical"
        android:layout_marginTop="14px">

        <ImageView
            android:id="@+id/iv_club_record_sport_type"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginLeft="4px"
            android:layout_marginRight="10px"
            android:src="@drawable/club_record_sport_type"/>

        <TextView
            android:id="@+id/tv_club_record_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333"
            android:text="这是名称"
            android:textSize="26px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_marginBottom="18px"
        android:gravity="center_vertical"
        android:layout_marginTop="6px">

        <ImageView
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginLeft="4px"
            android:layout_marginRight="10px"
            android:src="@drawable/club_record_location" />

        <TextView
            android:id="@+id/tv_club_record_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#333"
            android:text="这是很长很长的运动地址"
            android:textSize="26px" />

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>