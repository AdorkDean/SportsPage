<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/setting_item_selector"
    android:layout_marginTop="0.5dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_focus_img"
            android:layout_width="90dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="5dp"
            android:layout_height="70dp" />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/iv_focus_type"
                android:layout_width="15dp"
                android:src="@drawable/mine_focus_record_baseball"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_height="15dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_focus_status"
            android:layout_width="50dp"
            android:src="@drawable/mine_focus_record_focus"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_toLeftOf="@id/iv_focus_status"
            android:layout_toRightOf="@id/riv_focus_img"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/tv_focus_sportName"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:text="这是运动名称"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/tv_focus_creater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:gravity="center_vertical"
                android:text="发起人:发起人"/>

            <TextView
                android:id="@+id/tv_focus_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/gray"
                android:ellipsize="end"
                android:text="这是很长很长得地址信息"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>